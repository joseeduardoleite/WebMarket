@model IEnumerable<WebMarket.Models.Produto>

@{
    ViewData["Title"] = "ListarProduto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Listar Produtos</h2>
<hr />
<a asp-action="NovoProduto" asp-controller="Gestao" class="btn btn-success">Criar novo Produto</a>

<hr />



<table id="dados" class="table table-striped table-bordered responsive nowrap" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Fornecedor</th>
            <th>Preço de Custo</th>
            <th>Preço de Venda</th>
            <th>Medição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
        <tr>
            <td>@produto.Id</td>
            <td>@produto.Nome</td>
            <td>@produto.Categoria.Nome</td>
            <td>@produto.Fornecedor.Nome</td>
            <td>(R$)@produto.PrecoDeCusto</td>
            <td>(R$)@produto.PrecoDeVenda</td>
            <td>
                @if (@produto.Medicao == 0)
                {<span>Litro</span>}
                else if (@produto.Medicao == 1)
                { <span>Kilo</span> }
                else
                {<span>Unidade</span>}

            </td>

            <td>
                <a class="btn btn-primary" href="/Gestao/EditarProduto/@produto.Id">Editar</a>

                <form asp-controller="Produto" asp-action="Deletar" style="display:inline;">
                    <input type="hidden" name="id" id="id" value="@produto.Id" />
                    <button class="btn btn-danger">Deletar</button>
                </form>

        </tr>
        }

    </tbody>

</table>

