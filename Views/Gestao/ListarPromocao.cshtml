@model IEnumerable<WebMarket.Models.Promocao>


@{
    ViewData["Title"] = "ListarPromocao";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Listar Promoção</h2>
<hr />
<a asp-action="NovaPromocao" asp-controller="Gestao" class="btn btn-success">Criar nova Promoção</a>

<hr />



    <table id="dados" class="table table-striped table-bordered responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Produto</th>
                <th>Porcentagem</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var promocao in Model)
            {
                <tr>
                    <td>@promocao.Id</td>
                    <td>@promocao.Nome</td>
                    <td>@promocao.Produto.Nome</td>
                    <td>@promocao.Porcentagem%</td>
                    <td>
                        <a class="btn btn-primary" href="/Gestao/EditarPromocao/@promocao.Id">Editar</a>

                        <form asp-controller="Promocao" asp-action="Deletar" style="display:inline;">
                            <input type="hidden" name="id" id="id" value="@promocao.Id" />
                            <button class="btn btn-danger">Deletar</button>
                        </form>

                </tr>
            }

        </tbody>

    </table>


